  "description": "Boilerplate for twitch chatbot projects",
  "devDependencies": {
    "@types/jest": "~26.0.0",
    "@types/node": "~12.12.47",
    "@typescript-eslint/eslint-plugin": "~3.2.0",
    "@typescript-eslint/parser": "~3.2.0",
    "eslint": "~7.2.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-jest": "~23.13.2",
